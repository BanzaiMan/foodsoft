= simple_form_for stock_article, add_stock_article_supplier_deliveries_path(@supplier), :remote => true,
 :validate => true do |f|
  = f.hidden_field :supplier_id
  = f.input :name
  = f.input :unit
  = f.input :note
  = f.input :price
  = f.input :tax
  = f.input :deposit
  = f.association :article_category
  = f.submit