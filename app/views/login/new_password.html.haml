- title t('.title')
= t('.body', user: h(@user.nick)).html_safe
= simple_form_for @user, :url => {:action => 'update_password', :id => @user.id, :token => @user.reset_password_token} do |form|
  = form.input :password
  = form.input :password_confirmation
  .form-actions
    = form.submit t('.submit'), class: 'btn'
