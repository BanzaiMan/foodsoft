- if params[:preview]
  %h2 Vorschau
  #preview= render :partial => 'body'

#wiki-syntax-help{:style => "float:right"}
  %p
    %b Schnelle Formatierungshilfe
    %br/
    :plain
      [[interner Link]]<br />
      "externer Link":http://addresse.net<br />
      h1. Erste Überschrift<br />
      h2. Unterüberschrift<br />
      _kursiv_<br />
      *Fett*<br />
      # erster Listenpunkt<br />
      # zweiter Listenpunkt<br />
      ## Unterpunkt<br />
  %p
    = link_to "Tabellen, Styling, etc..", "http://hobix.com/textile/quick.html", :target => '_blank'

- form_for @page do |f|
  = f.error_messages
  = f.hidden_field :lock_version
  %p
    %b Title
    %br/
    = f.text_field :title
  %p
    %b Inhalt
    %br/
    = f.text_area :body, :size => "60x30"
  %p
    = f.submit "Vorschau", :name => 'preview'
    |
    = f.submit "Speichern"
    |
    = link_to "Abbrechen", :back