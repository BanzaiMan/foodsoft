- form_for @page do |f|
  = f.error_messages
  = f.hidden_field :lock_version
  = f.hidden_field :parent_id
  %p
    %b Titel
    %br/
    = f.text_field :title
  %p
    %b Inhalt
    %br/
    = f.text_area :body, :size => "60x30"
  %p
    = f.submit "Vorschau", :name => 'preview'
    |
    = f.submit "Speichern"
    |
    = link_to "Abbrechen", @page