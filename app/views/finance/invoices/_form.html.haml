- form_for([:finance, @invoice]) do |f|
  = f.error_messages
  = f.hidden_field :delivery_id
  = f.hidden_field :order_id

  - if @invoice.delivery
    %p= "Diese Rechnung ist mit einer #{link_to "Lieferung", [@invoice.supplier,@invoice.delivery]} verknÃ¼pft."
  - if @invoice.order
    %p= "Diese Rechnung ist mit einer #{link_to "Bestellung", @invoice.order} verknÃ¼pft."
  %p
    Lieferantin
    %br/
    = f.select :supplier_id, Supplier.all.collect { |s| [s.name, s.id] }
  %p
    Rechnungsnummer
    %br/
    = f.text_field :number
  %p
    Rechnungsdatum
    %br/
    = f.date_select :date
  %p
    Bezahlt am
    %br/
    = f.date_select :paid_on, :include_blank => true
  %p
    Rechnungsbetrag
    %br/
    = f.text_field :amount
  %p
    Pfand berechnet
    %br/
    = f.text_field :deposit
  %p
    Pfand gutgeschrieben
    %br/
    = f.text_field :deposit_credit
  %p
    Notiz
    %br/
    = f.text_area :note, :size => "28x8"
  %p
    = f.submit "Speichern"
